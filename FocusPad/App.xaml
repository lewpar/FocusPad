<Application x:Class="FocusPad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FocusPad.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,./Resources/Styles/StyleFocusListBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,./Resources/Styles/StyleFocusTextBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,./Resources/Styles/StyleFocusButtonDelete.xaml"/>
                <ResourceDictionary Source="pack://application:,,,./Resources/Styles/StyleFocusButtonAdd.xaml"/>
                <ResourceDictionary Source="pack://application:,,,./Resources/Styles/StyleFocusButtonExit.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
