<Window x:Class="FocusPad.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusPad.Views"
        xmlns:ni="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ni:TaskbarIcon x:Name="nIcon" Visibility="Visible" ToolTipText="Test Tooltip Text"
                    IconSource="/Resources/Icons/Tray.ico" ContextMenu="{StaticResource TrayMenu}"
                    MenuActivation="RightClick" TrayPopup="{StaticResource TrayStatusPopup}"
                    PopupActivation="DoubleClick" TrayToolTip="{StaticResource TrayToolTip}"/>
    </Grid>
</Window>
